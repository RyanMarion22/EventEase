<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventEase</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventEase.styles.css" asp-append-version="true" />

    <!-- Render Styles Section -->
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">

    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #2C2F33;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">EventEase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white mx-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mx-3" asp-area="Views" asp-controller="Venues" asp-action="Index">Venues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mx-3" asp-area="Views" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mx-3" asp-area="Views" asp-controller="Bookings" asp-action="Index">Bookings</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- (Welcome Message) -->
    <section class="text-center py-5" style="background-color: #3A3F44; color: white;">
        <div class="container">
            <h1 class="display-4">Welcome to EventEase</h1>
            <p class="lead">Your one-stop platform for managing events and bookings effortlessly.</p>
            <a class="btn btn-secondary btn-lg" asp-area="Views" asp-controller="Events" asp-action="Index">Explore Events</a>
        </div>
    </section>

    <div class="container mt-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- Smaller Footer -->
    <footer class="border-top footer text-center py-2" style="background-color: #2C2F33; color: white;">
        <div class="container">
            <small>&copy; 2025 - EventEase - <a class="text-warning" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
