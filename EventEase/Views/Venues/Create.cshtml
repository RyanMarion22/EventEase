@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Create Venue";
}

<div class="container">
    <h1>Create Venue</h1>
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="form-group">
            <label asp-for="VenueName" class="control-label"></label>
            <input asp-for="VenueName" class="form-control" placeholder="Enter venue name" />
            <span asp-validation-for="VenueName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" placeholder="Enter location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Capacity" class="control-label"></label>
            <input asp-for="Capacity" class="form-control" type="number" placeholder="Enter capacity" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VenueImage" class="control-label">Venue Image</label>
            <input type="file" name="venueImage" class="form-control" accept="image/*" />
            <span asp-validation-for="VenueImage" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="back-link ms-3">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}