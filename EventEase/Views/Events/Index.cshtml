@model IEnumerable<EventEase.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Events</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Create New Event
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().EventName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().EventDate)</th>
                        <th>@Html.DisplayNameFor(model => model.First().EventType)</th>
                        <th>@Html.DisplayNameFor(model => model.First().EventDescription)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                            <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.EventType)</td>
                            <td>@Html.DisplayFor(modelItem => item.EventDescription)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.EventID" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.EventID" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.EventID" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-sm {
        margin-right: 5px;
    }

    .card {
        border-radius: 10px;
    }
</style>
